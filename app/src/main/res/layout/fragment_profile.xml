<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fregment.ProFileFragment"
    android:background="@color/gradEndSunset">

    <RelativeLayout
        android:background="@drawable/grad1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.84"

        >


        <RelativeLayout
            android:id="@+id/layer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradsunset1"
            android:paddingTop="20dp"
            android:paddingBottom="15dp">

            <RelativeLayout
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_border">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="9dp"
                    android:adjustViewBounds="true"

                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/avt" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgUser"
                android:layout_centerHorizontal="true"
                android:fontFamily="monospace"
                android:text="Pham Trong Tu"
                android:textColor="@color/while1"
                android:textSize="32sp" />
        </RelativeLayout>

        <LinearLayout

            android:id="@+id/layer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer1"
            android:orientation="horizontal"

            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/grad0"
                android:fontFamily="monospace"
                android:forceHasOverlappingRendering="true"
                android:paddingTop="13dp"
                android:paddingBottom="7dp"
                android:text="4999         Friends"
                android:textAlignment="center"
                android:textColor="@color/while1"
                android:textSize="18dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/grad0"
                android:layout_weight="5"

                android:forceHasOverlappingRendering="true"
                android:paddingTop="13dp"
                android:paddingBottom="7dp"
                android:text="1608                     Folowers"
                android:textAlignment="center"

                android:textColor="@color/while1"
                android:textSize="18dp"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layer2"
            android:orientation="vertical"


            >

            <RelativeLayout
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                >

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:fontFamily="serif-monospace"
                    android:padding="15dp"
                    android:text="Email:tupham.160802@gmail.com"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:background="@drawable/border_nonbottom"
                    android:fontFamily="serif-monospace"
                    android:padding="15dp"
                    android:text="Phone: 0973370719"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sdt"
                    android:background="@drawable/border_nonbottom"
                    android:fontFamily="serif-monospace"
                    android:padding="15dp"
                    android:text="facebook: /TrongTu1608"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fb"
                    android:background="@drawable/border"
                    android:fontFamily="serif-monospace"
                    android:padding="15dp"
                    android:text="Address: 33/25 Châu Văn Liêm"
                    android:textSize="19dp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>